<div class="row justify-content-center">
  <h1>New Task</h1>

  <div class="border border-warning my-5 py-5">
    <%= form_with model: @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :details %>
      <%= f.text_field :details %>
      <%= f.submit %>
    <% end %>
  </div>
  <p><%= link_to "Go Back to Tasks", tasks_path %></p>
</div>
